    <!-- Left Sidebar -->
    <div class="bg-dark text-white" style="width: 200px;">
        <nav class="mt-3">
            <a href="#" class="d-block py-2 px-4 text-light text-decoration-none hover-bg-secondary">Dashboard</a>
